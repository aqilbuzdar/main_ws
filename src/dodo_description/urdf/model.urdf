<?xml version="1.0"?>
<robot name="dodo_model" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <link name="base_footprint"/>

  <link name="base_link">
    <inertial>
      <origin xyz="0.0 0.0 0.45" rpy="0.0 0.0 0.0"/>
      <mass value="15.0"/>
      <inertia ixx="1.266" ixy="0.0" ixz="0.0" iyy="1.266" iyz="0.0" izz="0.507"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://dodo_description/meshes/Cylinder.stl" scale="0.26 0.26 0.12844"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.45" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.27358" length="0.89942"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_link_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0.0 0.0 0.035" rpy="0.0 0.0 0.0"/>
  </joint>

  <link name="lidar">
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.03" length="0.03"/>
      </geometry>
      <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <cylinder radius="0.03" length="0.03"/>
      </geometry>
    </collision>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar"/>
    <origin xyz="0.0 0.0 0.2" rpy="0.0 0.0 0.0"/>
  </joint>

  <link name="oak_link">
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.06 0.03"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.06 0.03"/>
      </geometry>
    </collision>
  </link>

  <joint name="oak_link_joint" type="fixed">
    <parent link="base_link"/>
    <child link="oak_link"/>
    <origin xyz="0.25 0.0 0.11" rpy="0.0 0.0 0.0"/>
  </joint>

  <!-- IMU frame: attach to oak_link and rotate to REP-103 (x forward, y left, z up) -->
  <link name="oak_imu_link">
    <inertial>
      <mass value="0.0001"/>
      <inertia ixx="1e-9" ixy="0" ixz="0" iyy="1e-9" iyz="0" izz="1e-9"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.015 0.015 0.015"/>
      </geometry>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.015 0.015 0.015"/>
      </geometry>
    </collision>
  </link>

  <!-- If axes look wrong, change pitch (second value) from +1.5708 to -1.5708 -->
  <joint name="oak_imu_joint" type="fixed">
    <parent link="oak_link"/>
    <child link="oak_imu_link"/>
    <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
  </joint>

  <link name="right_wheel">
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.00179733" ixy="0" ixz="0" iyy="0.00179733" iyz="0" izz="0.00352800"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.005" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.0851" length="0.045"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
    <origin xyz="0 0 0.005" rpy="0 0 0"/>
    <geometry>
      <cylinder radius="0.084" length="0.02"/>
    </geometry>
  </collision>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.19 0.005" rpy="-1.6 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <link name="left_wheel">
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.00179733" ixy="0" ixz="0" iyy="0.00179733" iyz="0" izz="0.00352800"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.005" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.084" length="0.02"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
    <origin xyz="0 0 0.005" rpy="0 0 0"/>
    <geometry>
      <cylinder radius="0.084" length="0.02"/>
    </geometry>
  </collision>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.19 0.005" rpy="-1.6 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <link name="front_support">
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00002"/>
    </inertial>
    <visual>
      <origin xyz="0 0 -0.01" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.005"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.01" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.005"/>
      </geometry>
    </collision>
  </link>

  <joint name="front_support_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_support"/>
    <origin xyz="0.19276 0 -0.066" rpy="0 0 0"/>
  </joint>

  <link name="back_support">
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00002"/>
    </inertial>
    <visual>
      <origin xyz="0 0 -0.01" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.005"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 -0.01" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.005"/>
      </geometry>
    </collision>
  </link>

  <joint name="back_support_joint" type="fixed">
    <parent link="base_link"/>
    <child link="back_support"/>
    <origin xyz="-0.19276 0 -0.066" rpy="0 0 0"/>
  </joint>
 

</robot>
